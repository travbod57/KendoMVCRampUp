<div id="grid"></div>

<script>

    var stringFilterableLiteral = {
        extra: false,
        operators: {
            string: {
                startswith: "Starts with",
                contains: "Contains",
                eq: "Is equal to",
                neq: "Is not equal to"
            }
        }
    }

    $(document).ready(function () {

        var gridElem = $("#grid").kendoGrid({
            dataSource: {
                type: "aspnetmvc-ajax",
                transport: {
                    read: '@Url.Action("GetPeopleWithServersideFiltering", "Person")'
                },
                pageSize: 20,
                serverPaging: true,
                serverGrouping: true,
                serverFiltering: true,
                serverSorting: true,
                schema: {
                    data: 'data',
                    total: 'total'
                }
            },
            toolbar: [{
                name: "clearFilters",
                text: "Clear Filters"
            }],
            height: 550,
            groupable: true,
            sortable: {
                mode: "multiple",
                allowUnsort: true
            },
            filterable: true,
            pageable: {
                refresh: true,
                pageSizes: [5, 10, 20, 30, 1000],
                buttonCount: 5
            },
            columns: [{
                field: "FirstName",
                title: "First Name",
                width: 200,
                filterable: stringFilterableLiteral
            }, {
                field: "SecondName",
                title: "Second Name",
                filterable: stringFilterableLiteral
            }, {
                field: "Age",
                title: "Age",
                filterable: stringFilterableLiteral
            }]
        });

        var menu = $("#menu2"),
        original = menu.clone(true);

        var initMenu = function () {
            var orientation = "vertical";

            menu = $("#menu2").kendoContextMenu({
                orientation: orientation,
                target: "#grid",
                filter: "tr[role='row']",
                animation: {
                    open: { effects: "fadeIn" },
                    duration: 500
                },
                select: function (e) {
                    // Do something on select
                    alert('Selected');
                }
            });
        };

        gridElem.on("click", ".k-grid-clearFilters", function () {
            $("form.k-filter-menu button[type='reset']").trigger("click");
        });

        initMenu();

    });
</script>
